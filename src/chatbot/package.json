{
  "name": "aegis-chatbot-server",
  "version": "0.0.1",
  "description": "The chatbot server of aegis project, with gRPC, NATS, FastMCP and LangGraph integration",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node-esm src/server.ts",
    "build": "tsc",
    "serve": "tsc && node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:cov": "vitest run --coverage",
    "build:proto": "node ./node_modules/@grpc/proto-loader/build/bin/proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/proto/ ./proto/chatbot.proto"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/global-agent": "^3.0.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^24.0.3",
    "@vitest/ui": "^3.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@langchain/community": "^0.3.46",
    "@langchain/core": "^0.3.58",
    "@langchain/langgraph": "^0.3.3",
    "@langchain/langgraph-checkpoint-mongodb": "^0.0.6",
    "@langchain/mcp-adapters": "^0.6.0",
    "@langchain/mongodb": "^0.1.0",
    "@langchain/ollama": "^0.2.3",
    "@langchain/openai": "0.5.13",
    "@langchain/tavily": "^0.1.3",
    "cheerio": "^1.1.0",
    "fastmcp": "^3.3.0",
    "global-agent": "^3.0.0",
    "https-proxy-agent": "^7.0.6",
    "langchain": "^0.3.28",
    "lodash": "^4.17.21",
    "mongodb": "^6.17.0",
    "nats": "^2.29.3",
    "socks": "^2.8.6",
    "toml": "^3.0.0",
    "viem": "^2.38.2",
    "zod": "^3.25.64"
  }
}
